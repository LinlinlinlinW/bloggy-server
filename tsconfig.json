{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "build",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}